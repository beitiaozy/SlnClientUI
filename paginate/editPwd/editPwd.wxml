<navbar parameter='{{parameter}}'></navbar>
<view class="box">
  <form action="" bindsubmit="submit">
    <view class="row">
      <view class="row_fl">
        <text style="color:red;">*</text>原密码
      </view>
      <view class="row_fr">
        <input type="number" name="old_psd" placeholder="请输入原密码" />
      </view>
    </view>
    <view class="row">
      <view class="row_fl">
        <text style="color:red;">*</text>新密码
      </view>
      <view class="row_fr flex_sw">
        <input type="password" name="new_psd"  placeholder="请输入新密码" />
        <!-- <view class="iconfont icon-zhiyuandidian5"></view> -->
      </view>
    </view>
    <view class="row">
      <view class="row_fl">
        <text style="color:red;">*</text>确认密码
      </view>
      <view class="row_fr flex_sw">
        <input type="password" name="new_psd2" placeholder="请输入确认密码" />
        <!-- <view class="iconfont icon-zhiyuandidian5"></view> -->
      </view>
    </view>
    <button class="app_btn btn" hover-class="app_btn_hover" form-type="submit">提交</button>
  </form>
</view>