.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f2f4f8;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-card {
  background-color: #fff;
  width: 100%;
  max-width: 650rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 50rpx 40rpx;
  box-sizing: border-box;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
}

.input-box {
  flex: 1;
}

.input-box input {
  width: 100%;
  height: 88rpx; /* 提高输入框高度 */
  padding: 0 28rpx; /* 左右都有 padding，文字不贴边 */
  font-size: 30rpx; /* 保持现有字号 */
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  color: #333;
  box-sizing: border-box;
}


.required {
  color: red;
  margin-right: 8rpx;
}

.submit-btn {
  width: 100%;
  font-size: 32rpx;
  background: linear-gradient(to right, #4da0ff, #3578e5);
  color: white;
  border-radius: 12rpx;
  margin-top: 20rpx;
  text-align: center;
  border: none;
}

.submit-btn:active {
  background: linear-gradient(to right, #3b8cff, #2e64c7);
}

/* 返回主页按钮 */
.back-btn {
  width: 100%;
  font-size: 30rpx;
  margin-top: 30rpx;
  color: #3578e5;
  background-color: transparent;
  border: 2rpx solid #3578e5;
  border-radius: 12rpx;
}