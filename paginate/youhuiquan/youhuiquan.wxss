/** @format */
.page-wrapper {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: env(safe-area-inset-bottom);
}

.scroll-box {
  height: calc(100vh - 120rpx);
}

.card-list {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
  position: relative;
}

.card:active {
  transform: scale(0.98);
}

.card.disabled {
  opacity: 0.7;
}

/* 卡券背景样式 - 根据不同类型 */
.card-bg {
  color: #fff;
  padding: 30rpx;
  position: relative;
  min-height: 140rpx;
}

.month-card {
  background: linear-gradient(135deg, #36b3ff, #1a73e8);
}

.time-card {
  background: linear-gradient(135deg, #9c27b0, #673ab7);
}

.coupon-card {
  background: linear-gradient(135deg, #ff9800, #ff5722);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.amount-box {
  display: flex;
  align-items: baseline;
  font-weight: bold;
}

.amount-box .price {
  font-size: 64rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.amount-box .unit {
  font-size: 28rpx;
  margin-left: 8rpx;
  opacity: 0.9;
}

.details-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
}

.detail-item {
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  opacity: 0.9;
}

.detail-item .label {
  margin-right: 6rpx;
}

.detail-item .value {
  font-weight: 500;
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 15rpx 18rpx;
  border-radius: 20rpx;
  font-size: 25rpx;
  font-weight: 500;
}

.status-tag.active {
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
}

.status-tag.used {
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
}

.status-tag.expired {
  background-color: rgba(0, 0, 0, 0.5);
  color: green;
}

.card-bottom {
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #fff;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex: 1;
}

.info-item {
  font-size: 26rpx;
  color: #444;
  display: flex;
  flex-wrap: wrap;
}

.info-item .label {
  font-weight: bold;
  margin-right: 8rpx;
  color: #333;
  flex-shrink: 0;
}

.info-item .value {
  color: #666;
  max-width: 400rpx;
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.action-box {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.empty-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 响应式调整 */
@media (max-width: 360px) {
  .card-info {
    gap: 8rpx;
  }

  .info-item {
    font-size: 24rpx;
  }

  .amount-box .price {
    font-size: 56rpx;
  }

  .details-info {
    font-size: 22rpx;
  }
}