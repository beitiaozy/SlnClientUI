/** @format */
.container {
	background-color: #f5f7fa;
	min-height: 100vh;
	padding: 20rpx;
	box-sizing: border-box;
}

.scroll-view {
	height: calc(100vh - 100rpx);
}

.card-list {
	padding-bottom: 40rpx;
}

.card {
	background: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.04);
	transition: all 0.3s ease;
	position: relative;
	overflow: hidden;
}

.card:active {
	transform: translateY(4rpx);
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 8rpx;
	height: 100%;
	background: linear-gradient(to bottom, #1745CD, #1ab8e8);
}

.card-header {
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	margin-bottom: 30rpx;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #f0f0f0;
}

.shop-info {
	display: flex;
	align-items: center;
	flex: 1;
}

.shop-icon {
	font-size: 36rpx;
	margin-right: 12rpx;
}

.shop-name {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	max-width: 400rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.date {
	font-size: 26rpx;
	color: #999;
	flex-shrink: 0;
}

.amount-section {
	margin-bottom: 25rpx;
}

.amount-item {
	display: flex;
	justify-content: space-between;
	margin-bottom: 18rpx;
	align-items: center;
}

.amount-item.total {
	margin-top: 20rpx;
	padding-top: 20rpx;
	border-top: 1rpx dashed #e0e0e0;
}

.amount-item .label {
	font-size: 28rpx;
	color: #666;
}

.amount-item .value {
	font-size: 32rpx;
	font-weight: 500;
}

.recharge {
	color: #1745CD;
	font-weight: bold;
}

.gift {
	color: #07c160;
	font-weight: bold;
}

.total-amount {
	color: #e93323;
	font-size: 36rpx !important;
	font-weight: bold;
}

.card-footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-top: 20rpx;
	border-top: 1rpx solid #f0f0f0;
}

.order-no {
	font-size: 24rpx;
	color: #999;
	max-width: 400rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.status {
	font-size: 24rpx;
	padding: 6rpx 16rpx;
	border-radius: 20rpx;
}

.status.completed {
	background-color: #e6f7ff;
	color: #1890ff;
}

.status.processing {
	background-color: #fff7e6;
	color: #fa8c16;
}

.empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 70vh;
	text-align: center;
}

.empty-icon {
	width: 240rpx;
	height: 240rpx;
	margin-bottom: 30rpx;
	opacity: 0.7;
}

.empty-text {
	font-size: 32rpx;
	color: #999;
	margin-bottom: 16rpx;
}

.empty-subtext {
	font-size: 26rpx;
	color: #ccc;
	margin-bottom: 40rpx;
}

.recharge-btn {
	background: linear-gradient(135deg, #1745CD, #1ab8e8);
	color: #fff;
	border-radius: 50rpx;
	padding: 0 40rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	box-shadow: 0 6rpx 16rpx rgba(23, 69, 205, 0.3);
}

.load-more, .no-more {
	text-align: center;
	padding: 30rpx;
	font-size: 26rpx;
	color: #999;
}

.loading-text {
	display: inline-block;
	padding-left: 40rpx;
	position: relative;
}

.loading-text::before {
	content: '';
	position: absolute;
	left: 0;
	top: 50%;
	width: 30rpx;
	height: 30rpx;
	margin-top: -15rpx;
	border: 4rpx solid #f3f3f3;
	border-top: 4rpx solid #1745CD;
	border-radius: 50%;
	animation: spin 1s linear infinite;
}

@keyframes spin {
	0% { transform: rotate(0deg); }
	100% { transform: rotate(360deg); }
}