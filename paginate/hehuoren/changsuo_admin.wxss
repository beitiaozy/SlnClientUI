page {
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.box {
  padding: 20rpx;
}

.main {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.list {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-title {
  font-weight: bold;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.list-actions {
  width:60%;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.app_btn {
  width:100%;
  background: #4d6ef1;
  color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  margin: 0;
}

.btn_red {
  width:100%;
  background: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  margin: 0;
}

.position {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 80rpx;
  right: 50rpx;
  background-color: #4d6ef1;
  border-radius: 50%;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(77, 110, 241, 0.3);
}

.add_top {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
}

.row {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.row_fl {
  width: 200rpx;
  color: #666;
}

.row_fr {
  flex: 1;
}

.row_fr input {
  width: 100%;
}

.add_btn {
  background: #4d6ef1;
  color: #fff;
  border-radius: 8rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin: 40rpx auto 0;
  display: block;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.no-data .iconfont {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}