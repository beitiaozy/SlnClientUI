/* 搜索区域 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.address-selector {
  position: relative;
  margin-right: 20rpx;
}

.address-picker {
  width: 180rpx;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.full-name-tip {
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  white-space: nowrap;
  z-index: 100;
  animation: fadeIn 0.3s;
}

.search-input-container {
  flex: 1;
  position: relative;
  height: 72rpx;
}

.search-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  z-index: 2;
}

.search-input {
  width: 100%;
  height: 100%;
  background: #f7f8fa;
  border-radius: 36rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.placeholder-style {
  color: #999;
}

.search-btn {
  margin-left: 20rpx;
  background: linear-gradient(90deg, #1989fa, #07c160);
  color: #fff;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 30rpx;
  border-radius: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.2);
}

/* 日期筛选 */
.date-filter-container {
  background: #fff;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.date-picker-group {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #999;
}

.date-picker.active {
  color: #333;
}

.date-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.date-separator {
  margin: 0 16rpx;
  font-size: 28rpx;
  color: #666;
}

/* 统计信息 */
.stats-container {
  display: flex;
  justify-content: space-between;
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.stat-value.money {
  color: #ee0a24;
  font-weight: bold;
}

/* 列表样式 */
.list {
  display: flex;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  margin-right: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f7f8fa;
}

.list-content {
  flex: 1;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-label {
  width: 140rpx;
  color: #666;
}

.info-value {
  flex: 1;
  color: #333;
  word-break: break-all;
}

.info-value.money {
  color: #ee0a24;
  font-weight: bold;
}

.copyable {
  position: relative;
  padding-right: 40rpx;
}

.copyable::after {
  content: "复制";
  position: absolute;
  right: 0;
  color: #1989fa;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading-tip {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx) translateX(-50%); }
  to { opacity: 1; transform: translateY(0) translateX(-50%); }
}

/* 金额行样式 */
.money-row {
  display: flex; /* 启用flex布局 */
  justify-content: space-between; /* 两端对齐 */
  align-items: center; /* 垂直居中 */
  flex-wrap: nowrap; /* 不换行 */
}

.money-item {
  display: flex;
  align-items: center;
  flex: 1; /* 每个item平分宽度 */
}

/* 保持原有样式 */
.info-label {
  font-size: 14px;
  color: #666;
  margin-right: 5px;
}

.info-value.money {
  font-size: 16px;
  color: #e74c3c; /* 金额通常用红色 */
  font-weight: bold;
}

.highlight {
  background-color: #f9f9f9;
  padding: 5px 0px;
  margin: 5px 0;
  border-radius: 4px;
}