/* index.wxss */

/* 基础样式 */
.swiper {
	width: 100%;
	height: 30%;
}

.swiper-img {
	width: 100%;
	height: 400rpx;
	border-radius: 20rpx;
}

/* 信息卡片容器 */
.info-card {
	position: absolute;
	top: 450rpx; /* 轮播图高度微调 */
	left: 0;
	width: 100vw;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 30rpx;
}

.card-container {
	width: 95%;
	background-color: #fff;
	border-radius: 30rpx;
	padding: 30rpx;
	box-shadow: 2px 2px 10px #888;
}

/* 余额展示 */
.balance-section {
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
}

.balance-item {
	flex: 1;
	background: #fff;
	border-radius: 10rpx;
	padding: 20rpx;
	font-size: 28rpx;
	color: #3C464B;
}

.balance-item .value {
	font-size: 50rpx;
	color: #CEB37B;
	margin-top: 10rpx;
}

/* 工位状态 */
.status-grid {
	display: flex;
	flex-wrap: wrap;
	gap: 10rpx;
	margin-top: 20rpx;
}

.status-item {
	flex: 1 1 45%;
	background: #1745CD;
	color: #fff;
	border-radius: 10rpx;
	padding: 10rpx;
	display: flex;
	align-items: center;
	gap: 10rpx;
}

.status-item.busy {
	background: #FE9B35;
}

.status-icon {
	width: 55rpx;
	height: 55rpx;
}

/* 使用中按钮 */
.use-btn {
	width: 100%;
	background: red;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
	padding: 20rpx 0;
	border-radius: 10rpx;
	margin-top: 20rpx;
}

/* 订单信息（时间/价格） */
.order-info {
	font-size: 36rpx;
	color: #3C464B;
	margin-top: 20rpx;
	text-align: center;
}

/* 底部按钮 */
.bottom-btn {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
	display: flex;
	gap: 10px;
	padding: 20rpx;
	z-index: 999;
}

.stop-btn {
	flex: 1;
	background: red;
	color: #fff;
	font-size: 32rpx;
	text-align: center;
	padding: 20rpx 0;
	border-radius: 10rpx;
}
.recharge-btn {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 610rpx;
	height: 70rpx;
	margin: 30rpx auto;
	background: linear-gradient(90deg, #00CEF2 0%, #1745CD 100%);
	border-radius: 38rpx;
	color: #fff;
	font-size: 36rpx;
}
