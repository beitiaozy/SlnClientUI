/** @format */

.parent {
	width: 100vw;
	/*height: 87vh;*/
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: 40rpx;
}
.sao {
	font-size: 250rpx;
	color: gray;
}
.btn {
	width: 70%;
	background: rgb(60, 188, 187);
	aspect-ratio: 4/1;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 600;
	color: white;
}
.btn:active {
	background: rgba(60, 188, 187, 0.5);
}

.sao {
	font-size: 100rpx;
	color: #2d8cf0;
	display: block;
	text-align: center;
	margin: 60rpx 0 30rpx 0;
}

.btn {
	background-color: #2d8cf0;
	color: white;
	font-size: 32rpx;
	border-radius: 60rpx;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	margin: 0 auto;
	width: 60%;
}
/* 悬浮按钮样式优化 */
.floating-ball {
	position: fixed;
	bottom: 10rpx;   /* 悬浮球距离底部的距离 */
	right: 20rpx;     /* 悬浮球距离右边的距离 */
	width: 120rpx;
	height: 120rpx;
	background-color: #ff5c5c;
	color: #fff;
	border-radius: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.15);
	z-index: 999;
}


/* 可选：添加微动画 */
.floating-ball {
	animation: floatBall 2s infinite ease-in-out;
}

@keyframes floatBall {
	0% { transform: translateY(0rpx); }
	50% { transform: translateY(-10rpx); }
	100% { transform: translateY(0rpx); }
}

.modal-mask {
	position: fixed;
	top: 0; left: 0; right: 0; bottom: 0;
	background-color: rgba(0,0,0,0.6);
	z-index: 1000;
	display: flex;
	align-items: center;
	justify-content: center;
}

.modal-body {
	background: #fff;
	padding: 30rpx;
	border-radius: 20rpx;
	max-height: 70vh;
	width: 80vw;
	overflow-y: auto;
}

.modal-footer {
	margin-top: 20rpx;
	text-align: right;
}
