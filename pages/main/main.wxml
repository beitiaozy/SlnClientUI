<navbar parameter="{{ parameter }}"></navbar>

<view class="parent">

	<!-- 顶部轮播图 + 公告栏 -->
	<view class="space">
		<!-- 轮播图区域 -->
		<swiper wx:if="{{ swiper.length > 0 }}" autoplay="{{ true }}" indicator-dots="{{ true }}" circular="{{ true }}" style="width: 100vw;height:{{ swiperHeight }}px">
			<swiper-item wx:for="{{ swiper }}" data-url="/paginate/rich_text/rich_text" data-item="{{ item }}" wx:key="index">
				<image src="{{ item.img }}" mode="widthFix" style="width: 100%;height:{{ swiperHeight }}px" bindload="bindload" />
			</swiper-item>
		</swiper>
		<!-- 公告区域 -->
		<view style="width: 100vw; height: 70rpx;background: #FFFFFF;border-radius: 10rpx; opacity: 1; margin-top: 10rpx;">
			<view style="display: flex; justify-content: center; align-items: center; height: 70rpx; padding: 0 30rpx;">
				<image src="../../images/icon-gonggao@2x.png" style="height: 33rpx; width: 30rpx;"></image>
				<view style="font-size: 28rpx; color: #1745CD; margin-left: 10rpx;">公告</view>
				<swiper autoplay circular vertical style="flex: 1; margin-left: 20rpx; color: #1745CD; height: 34rpx; font-size: 28rpx; line-height: 32rpx;">
					<swiper-item
							wx:for="{{ gonggao }}"
							wx:key="index"
							data-index="{{ index }}"
							bindtap="onNoticeClick"
							catchtouchmove="catchTouchMove"
							style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;"
					>
						{{ item.title }}
					</swiper-item>
				</swiper>
			</view>
		</view>
	</view>

	<!-- 扫码按钮 -->
	<view class="iconfont icon-saoyisao sao"></view>
	<button bindtap="scan" class="btn">扫码洗车</button>

</view>

<authorize bind:onLoadFun="onLoadFun" iShidden="{{ iShidden }}" />

<!-- 优化后的“进行中”按钮 -->
<view wx:if="{{ showFloatingBall }}" class="floating-ball"  bindtap="gotoOrderPage">
	<text>进行中</text>
</view>
<view wx:if="{{ modalVisible }}" class="modal-mask" bindtap="closeModal">
	<view class="modal-body" catchtap>
		<rich-text nodes="{{ modalContent }}"></rich-text>
		<view class="modal-footer">
			<button bindtap="closeModal">关闭</button>
		</view>
	</view>
</view>
